---
import Layout from '../../../layouts/Layout.astro';

export async function getStaticPaths() {
  // In a real app, you might fetch this from a JSON file or CMS
  const tools = [
    { slug: 'langgraph', name: 'LangGraph', content: 'Deep dive into LangGraph orchestration...' },
    { slug: 'crewai', name: 'CrewAI', content: 'Mastering multi-agent systems with CrewAI...' }
  ];

  return tools.map((tool) => ({
    params: { slug: tool.slug },
    props: { tool },
  }));
}

const { tool } = Astro.props;
---

<Layout title={`${tool.name} | Knowledge Base`}>
  <main class="max-w-4xl mx-auto py-20 px-6">
    <a href="/stack" class="text-blue-400 text-sm">‚Üê Back to Stack</a>
    <h1 class="text-4xl font-bold text-white mt-8">{tool.name}</h1>
    <div class="prose prose-invert mt-10">
      {tool.content}
    </div>
  </main>
</Layout>