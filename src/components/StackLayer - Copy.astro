---
const { level, title, subtitle, description, tools, color, index } = Astro.props;
const isEven = index % 2 === 0;
---

<section class={`relative flex flex-col md:flex-row items-center gap-8 ${isEven ? 'md:flex-row-reverse' : ''}`}>
  
  <div class="w-full md:w-[45%] group">
    <div class="bg-zinc-900 border border-zinc-800 p-6 rounded-xl hover:border-zinc-600 transition-all duration-300 shadow-xl">
      <div class="flex items-center gap-3 mb-4">
        <span class={`px-2 py-1 rounded text-[10px] font-bold text-white uppercase tracking-widest ${color}`}>
          {level}
        </span>
        <h2 class="text-xl font-bold text-white">{title}</h2>
      </div>
      
      <h3 class="text-sm font-mono text-zinc-500 mb-4">{subtitle}</h3>
      <p class="text-zinc-400 text-sm leading-relaxed mb-6">
        {description}
      </p>

      <div class="flex flex-wrap gap-2">
        {tools.map((tool) => (
          <span class="bg-zinc-950 text-zinc-500 border border-zinc-800 px-3 py-1 rounded-full text-xs font-mono">
            {tool}
          </span>
        ))}
      </div>
    </div>
  </div>

  <div class="absolute left-4 md:left-1/2 -translate-x-1/2 w-8 h-8 rounded-full border-4 border-zinc-950 bg-zinc-800 z-10 hidden md:flex items-center justify-center">
    <div class={`w-2 h-2 rounded-full ${color} animate-pulse`}></div>
  </div>

  <div class="hidden md:block md:w-[45%]"></div>
</section>