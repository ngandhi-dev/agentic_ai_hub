// src/components/FooterCTA.astro
---

<section class="cta-band">
  <div class="cta-container">
    <div class="cta-content">
      <span class="cta-badge">STAY AHEAD</span>
      <h2>Ready to master the Agentic Stack?</h2>
      <p>Join a growing community of developers receiving weekly technical deep-dives into the future of autonomous AI.</p>
      
      <form class="cta-form" action="#" method="POST">
        <input type="email" placeholder="Enter your email" required />
        <button type="submit">Subscribe Free</button>
      </form>
      
      <div class="cta-features">
        <span>100% Free</span>
        <span>Weekday Delivery</span>
        <span>No Spam</span>
      </div>
    </div>
  </div>
</section>

<style>
  .cta-band {
    /* This creates the full-width background band */
    width: 100%;
    background-color: #5877ccff; /* Midnight Blue */
    padding: 100px 0;
    font-family: 'Inter', sans-serif;
    color: #ffffff;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    position: relative;
    overflow: hidden;
  }

  /* Subtle background glow to make the band feel deep */
  .cta-band::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 800px;
    height: 400px;
    background: radial-gradient(circle, rgba(37, 99, 235, 0.15) 0%, transparent 70%);
    pointer-events: none;
  }

  .cta-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 40px;
    position: relative;
    z-index: 1;
  }

  .cta-content {
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }

  .cta-badge {
    color: #60a5fa;
    font-weight: 800;
    font-size: 0.85rem;
    letter-spacing: 0.15em;
    margin-bottom: 24px;
    display: block;
  }

  .cta-content h2 {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 20px;
    letter-spacing: -0.04em;
    line-height: 1.1;
  }

  .cta-content p {
    font-size: 1.2rem;
    color: #cad3dfff;
    margin-bottom: 48px;
    line-height: 1.6;
  }

  .cta-form {
    display: flex;
    gap: 12px;
    max-width: 500px;
    margin: 0 auto 32px;
  }

  .cta-form input {
    flex: 1;
    padding: 18px 24px;
    border-radius: 12px;
    border: 1px solid #334155;
    background: #1e293b;
    color: #ffffff;
    font-size: 1rem;
    outline: none;
    transition: all 0.2s;
  }

  .cta-form input:focus {
    border-color: #60a5fa;
    background: #0f172a;
    box-shadow: 0 0 0 4px rgba(96, 165, 250, 0.1);
  }

  .cta-form button {
    background: #ffffff;
    color: #000000;
    font-weight: 700;
    padding: 18px 32px;
    border-radius: 12px;
    border: none;
    cursor: pointer;
    transition: all 0.2s;
  }

  .cta-form button:hover {
    background: #f1f5f9;
    transform: translateY(-2px);
  }

  .cta-features {
    display: flex;
    justify-content: center;
    gap: 32px;
    font-size: 0.9rem;
    font-weight: 600;
    color: #cad3dfff;
  }

  @media (max-width: 768px) {
    .cta-form {
      flex-direction: column;
    }
    .cta-content h2 {
      font-size: 2.25rem;
    }
    .cta-features {
      flex-direction: column;
      gap: 12px;
    }
  }
</style>