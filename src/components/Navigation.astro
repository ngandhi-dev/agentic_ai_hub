---
// src/components/Navigation.astro
const navLinks = [
  { href: '/pulse', label: 'Agentic Pulse' },  
  { href: '/stack', label: 'Agentic Stack' },
  { href: '/hub', label: 'Agentic Hub' },
  { href: '/about', label: 'About' },
];
---

<header class="site-header">
  <div class="nav-container">
    <nav class="main-nav">
      <ul class="nav-list">
        {navLinks.map(link => (
          <li>
            <a
              href={link.href}
              class={Astro.pathname === link.href ? 'active-link' : 'standard-link'}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>

<style is:global>
  :root {
    --nav-font: 'Inter', ui-sans-serif, system-ui, -apple-system, sans-serif;
  }

  .site-header {
    width: 100%;
    background: transparent;
    padding: 24px 0;
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 40px;
    display: flex;
    /* KEY CHANGE: This pushes everything inside to the right */
    justify-content: flex-end; 
    align-items: center;
  }

  .nav-list {
    display: flex !important;
    flex-direction: row !important;
    list-style: none !important;
    margin: 0 !important;
    padding: 0 !important;
    gap: 40px;
  }

  .nav-list a {
    font-family: var(--nav-font);
    text-decoration: none !important;
    font-size: 1rem;
    font-weight: 700;
    color: #000000;
    transition: all 0.2s ease;
    padding: 4px 0;
    position: relative;
    letter-spacing: -0.01em;
  }

  .standard-link {
    opacity: 0.7;
  }

  .standard-link:hover {
    opacity: 1;
  }

  .active-link {
    opacity: 1 !important;
  }

  .active-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 3px;
    background: #000000;
  }

  @media (max-width: 768px) {
    .nav-container {
      /* On mobile, usually better to center the links if there is no logo */
      justify-content: center; 
      padding: 0 20px;
    }
    .nav-list {
      gap: 20px;
    }
  }
</style>