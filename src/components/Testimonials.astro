---
const testimonials = [
  { quote: "Best weekly AI insights!", author: "Alice R." },
  { quote: "Clear, actionable, high-signal.", author: "Mark T." },
  { quote: "Saves me hours of research.", author: "Sophie L." },
  { quote: "Highly recommend to any AI builder.", author: "Leo P." },
];
---

<section class="bg-indigo-50 py-20 overflow-hidden">
  <div class="max-w-6xl mx-auto px-6">
    <h2 class="text-3xl font-bold text-center mb-10">What Readers Say</h2>

    <div class="flex gap-6 animate-marquee whitespace-nowrap">
      {testimonials.map(t => (
        <div class="bg-white px-6 py-4 rounded-xl shadow min-w-[280px]">
          <p class="italic">“{t.quote}”</p>
          <p class="mt-2 text-right font-semibold text-indigo-600">— {t.author}</p>
        </div>
      ))}
    </div>
  </div>

  <style>
    @keyframes marquee {
      0% { transform: translateX(0); }
      100% { transform: translateX(-50%); }
    }
    .animate-marquee {
      animation: marquee 30s linear infinite;
    }
  </style>
</section>

